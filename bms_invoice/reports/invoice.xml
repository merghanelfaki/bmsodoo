<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
        id="report_bms_invoice"
        model="account.move"
        report_type="qweb-html"
        string="Tax Invoice"
        name="bms_invoice.bms_invoice_report_view"
        file="bms_invoice.bms_invoice_report"
        paperformat="bms_invoice.bms_invoice_paper_format"
        print_report_name = "object.name"
    />

    <template id="bms_invoice_report_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                <div class="article o_report_layout_standard invoice_info" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
                    <t t-call="bms_invoice.custom_header_footer" t-lang="lang"/>
                    <div class="page pb-5 pt-5">
                        <div class="container px-0 mt-4 pt-1">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-set="i" t-value="1"/>
                        <t t-foreach="lines" t-as="line">
                            <div class="row no-gutters">
                                <div class="col-2">
                                    <div class="row no-gutters">
                                        <div class="col-5 mr-n2">
                                            <span t-esc="i"/>
                                        </div>
                                        <t t-set="i" t-value="i+1"/>
                                        <div class="ml-n4 col-7" t-field="line.product_id.default_code"></div>
                                    </div>
                                </div>
                                <div class="pr-3 ml-n4 col-4" t-field="line.name"></div>
                                <div class="col-6 text-center">
                                    <div class="row no-gutters">
                                        <div class="col-3" t-field="line.quantity">
                                            <span t-field="line.product_uom_id" groups="uom.group_uom"></span>
                                        </div>
                                        <div class="col-2" t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids">line.tax_ids.description</div>
                                        <t t-set="unit_tax" t-value="(line.tax_ids.amount / 100) * line.price_unit"/>
                                        <div class="col-2"  t-esc="'{:,.2f}'.format(unit_tax)"></div>
                                        <div class="ml-2 col-2" t-field="line.price_unit"></div>
                                        <div class="ml-1 col-3" t-esc="'{:,.2f}'.format(line.price_subtotal)"></div>
                                    </div>
                                </div>
                            </div>
                        </t>
                        </div>
                    </div>
                </div>
            </t>
        </t>
</template>
</odoo>